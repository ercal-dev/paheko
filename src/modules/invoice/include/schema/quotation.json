{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"type": "object",
	"properties": {
		"status": {
			"description": "Statut",
			"type": "string",
			"enum": ["draft", "awaiting", "rejected", "validated", "misc"]
		},
		"cancelled": {
			"description": "Défini si le devis est annnulé",
			"type": "boolean"
		},
		"cancellation_reason": {
			"description": "Motif de l'annulation",
			"type": ["string", "null"],
			"maxLength": 256
		},
		"author_id": {
			"description": "ID membre du rédacteur du devis",
			"type": "integer",
			"maxLength": 19
		},
		"child_id": {
			"description": "ID de la facture associée",
			"type": ["integer", "null"],
			"maxLength": 19
		},
		"parent_id": {
			"description": "Identique à ID si facture générée (hack pour grouper facture et devis)",
			"type": ["integer", "null"],
			"maxLength": 19
		},
		"duplicated_from_id": {
			"description": "ID du devis duquel celui-ci a été dupliqué",
			"type": ["integer", "null"],
			"maxLength": 19
		},

		"subject": {
			"description": "Objet",
			"type": "string",
			"maxLength": 256
		},
		"date": {
			"description": "Date",
			"type": "string",
			"maxLength": 10
		},
		"deadline": {
			"description": "Échéance",
			"type": ["string", "null"],
			"maxLength": 10
		},
		"signing_date": {
			"description": "Date de signature du document",
			"type": ["string", "null"],
			"maxLength": 10
		},
		"signing_place": {
			"description": "Lieu de signature du document",
			"type": ["string", "null"],
			"maxLength": 128
		},
		"validation_date": {
			"description": "Date de validation du devis",
			"type": ["string", "null"],
			"maxLength": 10
		},
		"items": {
			"description": "Articles",
			"type": ["array", "null"],
			"items": {
				"type": "object",
				"properties": {
					"id": { "type": "integer" },
					"reference": { "type": "string", "maxLength": 128 },
					"name": { "type": "string", "minLength": 1, "maxLength": 128 },
					"description": { "type": "string", "maxLength": 512 },
					"unit_price": { "type": "number", "minimum": 0 },
					"quantity": { "type": "number", "minimum": 0 }
				},
				"required" : ["id", "name"]
			},
			"maxItems": 128
		},
		"total": {
			"description": "Total",
			"type": ["number", "integer"],
			"minimum": 0
		},

		"siret": {
			"Description": "Numéro SIRET",
			"type": ["string", "null"],
			"maxLength": 14
		},
		"org_contact": {
			"description": "Contact",
			"type": "string",
			"maxLength": 256
		},

		"recipient_business_name": {
			"description": "Raison sociale",
			"type": "string",
			"maxLength": 128
		},
		"recipient_address": {
			"description": "Adresse",
			"type": "string",
			"maxLength": 512
		},
		"recipient_member_id": {
			"description": "ID membre du client",
			"type": ["integer", "null"],
			"maxLength": 19
		},
		"recipient_member_number": {
			"description": "Numéro de membre du client",
			"type": ["string", "null"],
			"maxLength": 19
		},

		"introduction_text" : {
			"description": "Texte d'introduction",
			"type": ["string", "null"],
			"maxLength": 256
		},
		"payment_text": {
			"description": "Instructions de paiement",
			"type": ["string", "null"],
			"maxLength": 512
		},
		"extra_text": {
			"description": "Informations complémentaires",
			"type": ["string", "null"],
			"maxLength": 1024
		},
		"comment": {
			"description": "Remarques (ne seront pas affichées sur le devis)",
			"type": ["string", "null"],
			"maxLength": 1024
		},
		"vat_exemption": {
			"Description": "Mode d'exonération de la TVA",
			"type": "string",
			"enum": ["nonprofit", "profit"]
		},
		"last_modification_date": {
			"description": "Date de la derniète modification",
			"type": "string",
			"maxLength": 25
		},
		"module_version": {
			"description": "Module version number from which the document has been generated",
			"type": "string",
			"maxLength": 12
		}
	},
	"required": [ "status", "cancelled", "author_id", "subject", "date", "org_contact", "recipient_business_name", "recipient_address", "vat_exemption", "last_modification_date", "module_version" ]
}
