{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"type": "object",
	"properties": {
		"vat_exemption": {
			"Description": "Mode d'exonération de la TVA",
			"type": "string",
			"enum": ["nonprofit", "profit"]
		},
		"siret": {
			"Description": "Numéro SIRET",
			"type": ["string", "null"],
			"maxLength": 14
		},
		"signing_place": {
			"description": "Ville de signature des devis",
			"type": ["string", "null"],
			"maxLength": 128
		},
		"introduction_text" : {
			"description": "Texte d'introduction",
			"type": ["string", "null"],
			"maxLength": 256
		},
		"payment_text": {
			"description": "Instructions de paiement",
			"type": "string",
			"maxLength": 512
		},
		"extra_text": {
			"description": "Informations complémentaires affichées en bas des devis",
			"type": "string",
			"maxLength": 512
		}
	},
	"required": ["vat_exemption"]
}
