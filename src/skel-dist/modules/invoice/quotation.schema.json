{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"type": "object",
	"properties": {
		"recipient_business_name": {
			"description": "Raison sociale",
			"type": "string",
			"maxLength": 128
		},
		"recipient_address": {
			"description": "Adresse",
			"type": "string",
			"maxLength": 512
		},
		"recipient_customer": {
			"description": "Membre enregistré",
			"type": ["object", "null"],
			"properties": {
				"id": { "type": "integer" },
				"numero": { "type": "string", "maxLength": 19 },
				"name": { "type": "string", "maxLength": 128 },
				"address": { "type": "string", "maxLength": 256 },
				"zipcode": { "type": "string", "maxLength": 16 },
				"city": { "type": "string", "maxLength": 128 },
				"country": { "type": ["string", "null"], "maxLength": 128 }
			},
			"required": ["id", "name"]
		},
		"subject": {
			"description": "Objet",
			"type": "string",
			"maxLength": 256
		},
		"date": {
			"description": "Date",
			"type": "string",
			"maxLength": 10
		},
		"deadline": {
			"description": "Échéance",
			"type": ["string", "null"],
			"maxLength": 10
		},
		"status": {
			"description": "Statut",
			"type": "string",
			"enum": ["draft", "awaiting", "rejected", "validated", "misc"]
		},
		"items": {
			"description": "Articles",
			"type": ["array", "null"],
			"items": {
				"type": "object",
				"properties": {
					"id": { "type": "integer" },
					"reference": { "type": "string", "maxLength": 128 },
					"name": { "type": "string", "minLength": 1, "maxLength": 128 },
					"description": { "type": "string", "maxLength": 512 },
					"unit_price": { "type": "number", "minimum": 0 },
					"quantity": { "type": "number", "minimum": 0 }
				},
				"required" : ["id", "name"]
			}
		},
		"total": {
			"description": "Total",
			"type": ["number", "integer"],
			"minimum": 0
		},
		"contact_info": {
			"description": "Contact",
			"type": "string",
			"maxLength": 256
		},
		"payment_detail": {
			"description": "Instructions de paiement",
			"type": ["string", "null"],
			"maxLength": 512
		},
		"extra_info": {
			"description": "Informations complémentaires",
			"type": ["string", "null"],
			"maxLength": 1024
		},
		"module_version": {
			"description": "Module version number from which the document has been generated",
			"type": "string",
			"maxLength": 12
		}
	},
	"required": [ "subject", "date", "status", "contact_info" ]
}
