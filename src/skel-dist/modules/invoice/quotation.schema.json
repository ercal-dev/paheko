{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"type": "object",
	"properties": {
		"recipient_business_name": {
			"description": "Raison sociale",
			"type": "string",
			"maxLength": 128
		},
		"recipient_address": {
			"description": "Adresse",
			"type": "string",
			"maxLength": 512
		},
		"recipient_member_id": {
			"description": "ID membre du client",
			"type": ["integer", "null"],
			"maxLength": 19
		},
		"recipient_member_numero": {
			"description": "Numéro de membre du client",
			"type": ["string", "null"],
			"maxLength": 19
		},
		"introduction_text" : {
			"description": "Texte d'introduction",
			"type": ["string", "null"],
			"maxLength": 256
		},
		"subject": {
			"description": "Objet",
			"type": "string",
			"maxLength": 256
		},
		"date": {
			"description": "Date",
			"type": "string",
			"maxLength": 10
		},
		"deadline": {
			"description": "Échéance",
			"type": ["string", "null"],
			"maxLength": 10
		},
		"status": {
			"description": "Statut",
			"type": "string",
			"enum": ["draft", "awaiting", "rejected", "validated", "misc"]
		},
		"items": {
			"description": "Articles",
			"type": ["array", "null"],
			"items": {
				"type": "object",
				"properties": {
					"id": { "type": "integer" },
					"reference": { "type": "string", "maxLength": 128 },
					"name": { "type": "string", "minLength": 1, "maxLength": 128 },
					"description": { "type": "string", "maxLength": 512 },
					"unit_price": { "type": "number", "minimum": 0 },
					"quantity": { "type": "number", "minimum": 0 }
				},
				"required" : ["id", "name"]
			}
		},
		"total": {
			"description": "Total",
			"type": ["number", "integer"],
			"minimum": 0
		},
		"vat_exemption": {
			"Description": "Mode d'exonération de la TVA",
			"type": "string",
			"enum": ["nonprofit", "profit"]
		},
		"siret": {
			"Description": "Numéro SIRET",
			"type": ["string", "null"],
			"maxLength": 14
		},
		"contact_info": {
			"description": "Contact",
			"type": "string",
			"maxLength": 256
		},
		"signing_place": {
			"description": "Lieu de signature du document",
			"type": ["string", "null"],
			"maxLength": 128
		},
		"signing_date": {
			"description": "Date de signature du document",
			"type": ["string", "null"],
			"maxLength": 10
		},
		"payment_detail": {
			"description": "Instructions de paiement",
			"type": ["string", "null"],
			"maxLength": 512
		},
		"extra_info": {
			"description": "Informations complémentaires",
			"type": ["string", "null"],
			"maxLength": 1024
		},
		"module_version": {
			"description": "Module version number from which the document has been generated",
			"type": "string",
			"maxLength": 12
		}
	},
	"required": [ "recipient_business_name", "recipient_address", "subject", "date", "status", "contact_info", "module_version" ]
}
